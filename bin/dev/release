#!/usr/bin/env bash

trap "exit" INT

source ".medic/_support/cecho.sh"
source ".medic/_support/step.sh"

set -e

mkdir -p tmp/release

step_header "Build: Darwin aarch64" "cargo build --target aarch64-apple-darwin -r"
echo
cargo build --target aarch64-apple-darwin -r

step_header "Build: Darwin x86_64" "cargo build --target x86_64-apple-darwin -r"
echo
cargo build --target x86_64-apple-darwin -r

echo
step "Package: Darwin aarch64" \
  "tar -czf tmp/release/dyd-darwin-arm64.tar.gz target/aarch64-apple-darwin/release/dyd"

step "shasum: Darwin aarch64" \
  "sha256sum tmp/release/dyd-darwin-arm64.tar.gz > tmp/release/dyd-darwin-arm64.sha256sum"

step "Package: Darwin x86_64" \
  "tar -czf tmp/release/dyd-darwin-x86_64.tar.gz target/x86_64-apple-darwin/release/dyd"

step "shasum: Darwin x84_64" \
  "sha256sum tmp/release/dyd-darwin-x86_64.tar.gz > tmp/release/dyd-darwin-x86_64.sha256sum"
